---
interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div
  class="max-w-[394px] min-h-60 md:h-72 lg:h-[270px] bg-white rounded-md flex flex-col justify-center items-center p-4 gap-3"
>
  <img src={icon} alt={title} />
  <h3 class="text-lg md:text-xl font-semibold text-fontColor">{title}</h3>
  <p class="text-base text-center text-secondaryFontColor">{description}</p>
</div>
