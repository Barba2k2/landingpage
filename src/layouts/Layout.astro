---
interface Props {
  title: string;
}

const { title } = Astro.props;

import LogoIcon from "../assets/icons/favicon.svg";
---

<!doctype html>
<html lang="pt_BR" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Criado para oferecer suporte financeiro ágil e eficiente, o aplicativo ajuda membros da cooperativa que enfrentam dificuldades devido às enchentes no Rio Grande do Sul."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={LogoIcon.src} />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Staatliches&display=swap" rel="stylesheet" />

    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
